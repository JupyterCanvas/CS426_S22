server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		try_files $uri $uri/ =404;
	}

	location /test {
		try_files $uri $uri/ $uri.html =404;
	}

	# Reverse proxy NoVNC+websockify:
	# adapted from https://github.com/novnc/noVNC/wiki/Proxying-with-nginx
	# and https://datawookie.dev/blog/2021/08/websockify-with-token-target-selection/

	location /mynovnc {
		proxy_pass http://192.168.161.139:6080/;
	}
	
	location /websockify {
		proxy_http_version 1.1;
		proxy_pass http://192.168.161.139:6080/;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_set_header Host $host;
		# VNC connection timeout
		proxy_read_timeout 61s;

		# Disable cache
		proxy_buffering off;
	}

}

